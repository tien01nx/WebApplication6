<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto-refresh DataTable</title>
    <!-- Include jQuery and DataTables CSS/JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
</head>
<body>

    <table id="exampleTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Column 1</th>
                <th>Column 2</th>
                <th>Column 3</th>
            </tr>
        </thead>
    </table>

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTable
            const table = $('#exampleTable').DataTable({
                ajax: {
                    url: '/Home/Test',
                    dataSrc: ''
                },
                columns: [
                    { data: 'id' },
                    { data: 'role1' },
                    { data: 'createby' },
                    { data: 'createat' },
                ]
            });

            // Tự động tải lại dữ liệu sau mỗi 5 giây
            setInterval(function () {
                table.ajax.reload(null, false); // Tham số thứ hai để giữ nguyên trang hiện tại
            }, 5000); // 5000ms = 5 giây
        });
    </script>

</body>
</html>
