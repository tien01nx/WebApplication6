<script>
    // Lựa chọn hoặc bỏ chọn tất cả checkbox
    document.getElementById('selectAll').addEventListener('change', function () {
        let checkboxes = document.querySelectorAll('.rowCheckbox');
        checkboxes.forEach(checkbox => checkbox.checked = this.checked);
    });

    // Gửi dữ liệu đã chọn qua AJAX khi nhấn nút "Send Selected Data"
    document.getElementById('sendDataBtn').addEventListener('click', function () {
        let selectedIds = [];
        document.querySelectorAll('.rowCheckbox:checked').forEach(checkbox => {
            selectedIds.push(checkbox.getAttribute('data-id'));
        });

        // Kiểm tra nếu có dữ liệu nào được chọn
        if (selectedIds.length === 0) {
            alert('Please select at least one row.');
            return;
        }

        // Gửi dữ liệu lên server qua AJAX
        $.ajax({
            url: '/your-server-endpoint', // Thay đổi URL tới endpoint của bạn
            method: 'POST',
            data: { selectedIds: selectedIds },
            success: function (response) {
                alert('Data sent successfully!');
                console.log(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
                alert('Failed to send data.');
            }
        });
    });
</script>
